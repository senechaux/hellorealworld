    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phweep in phweeps %}
            <tr>
                <td>{{ phweep.id }}</td>
                <td>{{ phweep.message }}</td>
                <td>
                    <a href="{{ path('phweep_show', {'id': phweep.id}) }}">show</a>
